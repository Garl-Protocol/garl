{
  "mcpServers": {
    "garl": {
      "command": "npx",
      "args": ["-y", "@garl-protocol/mcp-server"],
      "env": {
        "GARL_API_KEY": "${GARL_API_KEY}",
        "GARL_AGENT_ID": "${GARL_AGENT_ID}",
        "GARL_API_URL": "${GARL_API_URL:-https://api.garl.dev/api/v1}"
      }
    }
  }
}
